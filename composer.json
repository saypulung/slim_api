{
    "require": {
        "slim/slim": "4.*",
        "illuminate/database": "^10.35",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.5",
        "robmorgan/phinx": "*",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "php-di/php-di": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": ["database/"]
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start-dev": "php -S localhost:5001 -t public public/index.php"
    }
}
